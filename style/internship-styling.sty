% Allow access to raw title
\let\LaTeXtitle\title
\renewcommand{\title}[1]{
	\LaTeXtitle{
		#1
	}
}

\providecommand{\stylizedtitle}
{
	{
		\vspace{5mm}
		\centering\huge{
			\color{gray}{
				\thetitle \\
			}
		}
	}
}

\let\LaTeXauthor\author
\renewcommand{\author}[1]{
	\LaTeXauthor{
		#1
	}
}

\providecommand{\stylizedauthor}
{
	{
		\vspace{5mm}
		\centering\large{
			\theauthor\\
		}
	}
}


\providecommand{\titlepageversion}{
	{
		\begin{center}
		{
			Versie: \versionnumber
		}
		\end{center}
	}
}

