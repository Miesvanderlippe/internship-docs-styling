%%	Front-page styling
%%
\let\LaTeXtitle\title
\renewcommand{\title}[1]{
	\LaTeXtitle{
		{
			\vspace{5mm}
			\centering\huge{
				\color{gray}{
					#1\\
				}
			}
		}
	}
}

\let\LaTeXauthor\author
\renewcommand{\author}[1]{
	\LaTeXauthor{
		{
			\vspace{5mm}
			\centering\large{
				#1\\
			}
		}
	}
}

\providecommand{\titlepageversion}{
	{
		\begin{center}
		{
			Versie: \versionnumber
		}
		\end{center}
	}
}

